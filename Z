#!/hint/sh

# this way of formating code comes after 2 times rewriten overbloated attempts
# and despite that long lines code is extremly hard to navigate ( without horizontal scroll >:[ in `micro` )
# I find it most oranized in structored way to write this file

#                                                                                                              -vte                           -A                            -z                          -z          -Z                           -z                                               -z                                                                         -z                                           -z                                          -z                             \
#alias  Zout='printf \\0'         Zout-printf='printf "%s\0"'     Zio-tr='tr \\0\\n \\n\\0'      Zin-cat='cat --sholl-all'      Zin-bat='bat --show-all'      Zin-sed='sed --null-data' Zio-grep='grep --null-data --null'       Zin-sort='soet --zero-terminated'         Zout-dirname='dirname --zero'               Zin-read='read -r d ""'               Zin-head='head --zero-terminated'            Zin-tail='tail --zero-terminated'              Zout-id='id --zero'                         \
alias   Zout='printf \\0'         Zout-printf='printf "%s\0"'     Zio-tr='tr \\0\\n \\n\\0'      Zin-cat='cat -vte'             Zin-bat='bat -A'              Zin-sed='sed -z'          Zio-grep='grep -z          -Z'           Zin-sort='soet -z'                                 Zout-dirname='dirname -z'                   Zin-read='read -r d ""'               Zin-head='head -z'                  Zin-tail='tail -z'                             Zout-id='id -z'                             \
      Z=Zout              Zprintf=Zout-printf Zecho=Zprintf   Ztr=Zio-tr                    Zcat=Zin-cat                   Zbat=Zin-bat                  Zsed=Zin-sed             Zgrep=Zio-grep                           Zsort=Zin-sort                                  Zdirname=Zout-dirname                          Zread=Zin-read                        Zhead=Zin-head                      Ztail=Zin-tail                                   Zid=Zout-id                                     \
                                                                                                                                                                                        Zin-grep='grep -Z'                                                                                                                                                                                                                                                                                           \
                                                                                                                                                                                       Zout-grep='grep -z'                                                                                                                                                                                                                                                                                           \
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     \

