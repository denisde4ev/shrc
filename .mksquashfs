#!/bin/false hint/sh

cd -- "${0%/*}" || exit

mksquashfs . "${@-"B--$(date -I).squashfs"}" \
	-not-reproducible \
	-noappend \
	-progress \
	-mem 8G \
	-exit-on-error \
	-all-root \
	-comp gzip -Xcompression-level 1 \
	\
	-regex \
	-e 'B--[0-9-]+.squashfs' \
	-e '\.git' \
	-e '.*/\.git' \
	-e '.*/.*/\.git' \
	-e '.*/.*/.*/\.git' \
;
	# -xattrs \
