i{
for i in ~/B/_loadable/[a-zA-Z0-9_]*.sh ${sh_is_bash+~/B/_loadable/[a-zA-Z0-9_]*.bash}; do
	i=${i##*/}
	i=${i%.*}
	# arg "$i"
	# (dont use for now fn): eval "$i(){ __load_loadable $i \"\$@\" }"
	alias "$i"="__load_loadable $i"
done
}i

