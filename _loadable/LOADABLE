#! /hint/sh

__load_loadable() {
	unalias "$1" 2>&- || {
		# ?already loaded? if no alias is used then execute it,
		# DO NOT USE FUNCTION! if fn used this will result in recursion
		"$@"
		return
	}
	# for now no bash specific fn-s
	case $sh_is in
	bash)
		if [ -e ~/B/_loadable/"$1".bash ]; then
			. ~/B/_loadable/"$1".bash
		else
			. ~/B/_loadable/"$1".sh
		fi
		;;
	*)
		. ~/B/_loadable/"$1".sh
	esac


	# (not needed for now), if alias needed to execute, use:
	# local i;i=$1; shift
	# eval "$i ${@:+"\"\${@}\""}"  #"
	"$@"
}


alias \
+=_plus_ \
'cd+'='_cd_plus' \
'cd++'='_cd_plusparents' \
'cd..'=_cd__ \
'..'=_cd__ \
'cd.which'='cd.. which-ll' \
'cd.'=_cd_dot \
\
song=_song \
pwd=_pwd_ \
\
+='_plus_' \
ll.parents='_ll_parents' \
set-x='_set_x' \
'type=_type_' '?=_type_' '??=_type_ -a' \
;
# ?- is from ~/B/a


# P='__load_loadable_byfile %%PacmanSyu.sh P' \

# ${sh_is_bash+
